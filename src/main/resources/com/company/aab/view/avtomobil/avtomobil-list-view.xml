<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://avtomobilListView.title"
      focusComponent="avtomobilsDataGrid">
    <data>
        <collection id="avtomobilsDc"
                    class="com.company.aab.entity.Avtomobil">
            <fetchPlan extends="_base">
                <property name="fotos" fetchPlan="_base"/>
                <property name="oborudovanieFotos" fetchPlan="_base"/>
                <property name="performance_service" fetchPlan="_base">
                    <property name="usluga" fetchPlan="_base"/>
                </property>
                <property name="zayavka" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="avtomobilsDl" readOnly="true">
                <query>
                    <![CDATA[select e from Avtomobil e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="avtomobilsDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createBtn" action="avtomobilsDataGrid.create"/>
            <button id="editBtn" action="avtomobilsDataGrid.edit"/>
            <button id="removeBtn" action="avtomobilsDataGrid.remove"/>
            <simplePagination id="pagination" dataLoader="avtomobilsDl"/>
        </hbox>
        <dataGrid id="avtomobilsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="avtomobilsDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="username"/>
                <column property="date"/>
                <column property="status"/>
                <column property="nomer"/>
                <column property="marka"/>
                <column property="nomerAG"/>
                <column property="zayavka.nomer"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectBtn" action="selectAction"/>
            <button id="discardBtn" action="discardAction"/>
        </hbox>
    </layout>
</view>
